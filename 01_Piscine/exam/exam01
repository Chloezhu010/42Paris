#include <unistd.h>

void    ft_putchar(char c)
{
        write(1, &c, 1);
}

void    ft_first(char *str)
{
        int     i;

        i = 0;
        while (str[i] && str[i] == 32)
                i++;
        while (str[i] && str[i] > 32 && str[i] < 127)
        {
                ft_putchar(str[i]);
                i++;
        }
        ft_putchar('\n');
}

int     main(int argc, char *argv[])
{
        if (argc <= 2)
        {
                ft_first(argv[1]);

        } else
                ft_putchar('\n');
}
